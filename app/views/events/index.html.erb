<div class="container mt-5">
  <h1 class="mb-4">All Events</h1>

  <%= link_to 'New Event', new_event_path, class: 'btn btn-primary mb-3' %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.date %></td>
          <td><%= event.location %></td>
          <td>
            <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-warning' %>
            <%= link_to 'Show', event_path(event), class: 'btn btn-info' %>
            <%= link_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

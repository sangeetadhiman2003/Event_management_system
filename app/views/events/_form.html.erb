<div class="container mt-4">
  <%= form_with(model: event, local: true, class: "row g-3") do |form| %>
    <div class="col-md-6">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= form.label :date %>
      <%= form.date_select :date, class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= form.label :location %>
      <%= form.text_field :location, class: "form-control" %>
    </div>

    <div class="col-12">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

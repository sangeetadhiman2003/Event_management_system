<%= form_with(model: attendee, local: true) do |form| %>
    <div class="card">
      <div class="card-header">
        <h4><%= attendee.new_record? ? 'Register New Attendee' : 'Edit Attendee Information' %></h4>
      </div>
      <div class="card-body">
        <div class="form-group">
          <%= form.label :user_id, class: 'form-label' %>
          <%= form.collection_select :user_id, User.all, :id, :email, { prompt: 'Select User' }, { class: 'form-control' } %>
        </div>
  
        <div class="form-group">
          <%= form.label :event_id, class: 'form-label' %>
          <%= form.collection_select :event_id, Event.all, :id, :name, { prompt: 'Select Event' }, { class: 'form-control' } %>
        </div>
      </div>
      <div class="card-footer">
        <%= form.submit attendee.new_record? ? 'Create Attendee' : 'Update Attendee', class: 'btn btn-primary' %>
        <%= link_to 'Back', attendees_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  <% end %>
  